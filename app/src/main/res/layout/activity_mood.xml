<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/mood_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/mood_content_hint"
        android:layout_margin="5dp"
        android:singleLine="false"
        android:gravity="top"
        android:background="@drawable/bg_mood_edittext"
        android:minLines="8"/>
    <LinearLayout
        android:id="@+id/mood_transmit_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/old_mood"/>
        <TextView
            android:id="@+id/mood_show_old"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mood_operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/mood_can_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/mood_can_comment"/>
            <CheckBox
                android:id="@+id/mood_can_transmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/mood_can_transmit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="right"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/mood_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@mipmap/location"/>
            <ImageView
                android:id="@+id/mood_friend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@mipmap/at"/>
            <ImageView
                android:id="@+id/mood_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@mipmap/photo"/>
        </LinearLayout>
        <TextView
            android:id="@+id/mood_location_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:gravity="right"/>
        <TextView
            android:id="@+id/mood_network_link_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:gravity="right"/>
    </LinearLayout>
    <GridView
        android:id="@+id/mood_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/default_8dp"
        android:numColumns="3"></GridView>
</LinearLayout>
