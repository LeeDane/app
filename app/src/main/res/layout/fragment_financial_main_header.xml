<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/default_10dp"
        android:gravity="right">
        <ImageView
            android:id="@+id/financial_header_edit_one_level"
            android:layout_width="@dimen/default_20dp"
            android:layout_height="@dimen/default_20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_category_edit"/>
        <ImageView
            android:id="@+id/financial_header_setting"
            android:layout_width="@dimen/default_20dp"
            android:layout_height="@dimen/default_20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_settings_purple_400_18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_5dp"
                    android:text="@string/financial_month_income"/>

                <TextView
                    android:id="@+id/financial_header_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_money"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_sign"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_5dp"
                    android:text="@string/financial_month_spend"/>

                <TextView
                    android:id="@+id/financial_header_spend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_money"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_sign"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_5dp"
                    android:text="@string/financial_month_budget"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_money"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_sign"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/line"/>
        </LinearLayout>
        <TextView
            android:id="@+id/add_financial"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bg_login_edittext"
            android:textSize="30sp"
            android:layout_marginRight="@dimen/default_3dp"
            android:text="记\n一\n笔"/>
    </LinearLayout>
    <TextView
        android:id="@+id/financial_refresh"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/default_10dp"
        android:layout_marginRight="@dimen/default_10dp"
        android:layout_marginTop="@dimen/default_5dp"
        android:background="@drawable/btn_login_seletorbg"
        android:clickable="true"
        android:minWidth="250dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawableLeft="@drawable/refresh01"
        android:text="@string/financial_refresh"
        android:textColor="#000"
        android:textSize="@dimen/default_16sp" />
    <TextView
        android:id="@+id/financial_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_10dp"
        android:layout_marginLeft="@dimen/default_10dp"
        android:layout_marginBottom="@dimen/default_10dp"
        android:text="@string/financial_detail"
        android:textColor="#000"
        android:textSize="@dimen/default_16sp" />
</LinearLayout>
