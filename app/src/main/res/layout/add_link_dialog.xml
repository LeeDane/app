<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <EditText
        android:id="@+id/add_link_dialog_text"
        android:layout_width="match_parent"
        android:textSize="@dimen/default_16sp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/add_link_hint_text"/>
    <EditText
        android:id="@+id/add_link_dialog_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_16sp"
        android:layout_marginTop="@dimen/default_8dp"
        android:singleLine="true"
        android:hint="@string/add_link_hint_desc"/>
</LinearLayout>