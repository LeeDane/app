<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    card_view:cardMaxElevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    android:clickable="true"
    android:layout_marginTop="@dimen/default_5dp"
    card_view:paddingStart="@dimen/default_10dp"
    card_view:paddingEnd="@dimen/default_10dp"
    android:foreground="?android:selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding">
        <LinearLayout
            android:id="@+id/comment_user_info"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/default_3dp"
            android:visibility="gone"
            android:orientation="vertical">
            <com.leedane.cn.customview.CircularImageView
                android:id="@+id/comment_user_pic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/no_pic"/>
            <TextView
                android:id="@+id/comment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/default_5dp"
                android:textColor="@color/blueAccountLink"
                android:text="@string/default_time"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/comment_from"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/no_text"/>
                <TextView
                    android:id="@+id/comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来自：android客户端"
                    android:maxWidth="120dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <com.leedane.cn.customview.MoodTextView
                android:id="@+id/comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_16sp"
                android:layout_marginTop="@dimen/default_3dp"
                android:paddingTop="@dimen/default_3dp"
                android:layout_below="@id/comment_from"
                android:text="@string/no_text"/>
            <TextView
                android:id="@+id/comment_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/default_5dp"
                android:paddingBottom="@dimen/default_5dp"
                android:textSize="@dimen/default_14sp"
                android:layout_below="@id/comment_content"
                android:layout_marginTop="@dimen/default_5dp"
                android:background="#FFFAFA"
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="gone"
                android:text="@string/no_text"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>