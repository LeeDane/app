<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <android.support.v4.view.ViewPager
        android:id="@+id/chat_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginBottom="43dp">
    </android.support.v4.view.ViewPager>>
    <ImageView
        android:id="@+id/line_imageview"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:scaleType="matrix"
        android:layout_alignParentBottom="true"
        android:src="@drawable/line"/>
    <LinearLayout
        android:id="@+id/chat_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <com.leedane.cn.customview.RightBorderTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="tabChatClick"
            android:textColor="@color/colorPrimary"
            android:text="@string/chat"/>
        <com.leedane.cn.customview.RightBorderTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="tabContactClick"
            android:textColor="@color/gray"
            android:text="@string/address_list"/>
        <com.leedane.cn.customview.RightBorderTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="tabOperateClick"
            android:textColor="@color/gray"
            android:text="@string/oparate"/>
    </LinearLayout>
</RelativeLayout>