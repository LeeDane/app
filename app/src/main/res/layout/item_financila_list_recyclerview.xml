<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/default_8dp"
    android:paddingBottom="@dimen/default_8dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/financial_list_model"
        android:layout_width="@dimen/default_30dp"
        android:layout_height="@dimen/default_30dp"
        android:scaleType="fitXY"
        android:src="@mipmap/income_increase_32px"/>
    <TextView
        android:id="@+id/financial_list_category"
        android:layout_width="@dimen/default_140dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/default_10dp"
        android:text="@string/no_text"/>

    <TextView
        android:id="@+id/financial_list_money"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_text"/>

    <TextView
        android:id="@+id/financial_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/default_time_max_width"
        android:text="@string/default_time"/>
    <ImageView
        android:id="@+id/financila_list_right"
        android:layout_width="@dimen/default_30dp"
        android:layout_height="@dimen/default_30dp"
        android:scaleType="fitXY"
        android:src="@mipmap/right_sign"/>
</LinearLayout>
