<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/default_padding"
    android:paddingTop="@dimen/default_padding">
    <LinearLayout
        android:id="@+id/search_mood_user_info"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <com.leedane.cn.customview.CircularImageView
            android:id="@+id/friend_no_yet_user_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/no_pic"/>
        <TextView
            android:id="@+id/friend_no_yet_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/default_5dp"
            android:text="@string/default_time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/friend_no_yet_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blueAccountLink"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/no_text"/>
        <TextView
            android:id="@+id/friend_no_yet_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="@string/no_text"/>
    </LinearLayout>
    <Button
        android:id="@+id/friend_no_yet_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:focusable="false"
        android:enabled="false"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/personal_add_friend"
        android:textSize="@dimen/default_16sp" />
</LinearLayout>
