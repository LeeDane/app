<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_80dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_user_img"
            android:layout_width="@dimen/default_60dp"
            android:layout_height="@dimen/default_60dp"
            android:scaleType="fitXY"
            android:padding="@dimen/default_8dp"
            android:src="@drawable/no_pic"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/home_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/default_10dp"
                android:visibility="gone"
                android:textColor="#4E8CEE"
                android:text="LeeDane"/>
            <TextView
                android:id="@+id/home_user_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/default_12sp"
                android:lines="2"
                android:ellipsize="end"
                android:visibility="gone"
                android:text="大家好，这是"/>
            <TextView
                android:id="@+id/home_user_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bluePrimary"
                android:visibility="gone"
                android:text="请先登录"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/show_menu_list"
                android:layout_width="@dimen/default_30dp"
                android:layout_height="@dimen/default_30dp"
                android:src="@drawable/home_icon_menu"
                android:padding="@dimen/default_5dp"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_40dp"
        android:layout_marginBottom="@dimen/default_10dp"
        android:layout_marginLeft="@dimen/default_10dp"
        android:layout_marginRight="@dimen/default_10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/searck_key"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:background="@drawable/home_search_edittext"
            android:drawableLeft="@drawable/ic_search_blue_300_18dp"
            android:paddingLeft="10dp"
            android:hint="请输入关键字"
            android:selectAllOnFocus="false"
            android:drawablePadding="5dp"
            android:textColorHint="@color/darker_gray"
            android:textSize="12sp"
            android:inputType="text"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/home_search_button_seletorbg"
            android:clickable="true"
            android:onClick="onSearchClick"
            android:textColor="#fff"
            android:gravity="center"
            android:text="搜索"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/darker_gray"></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_list_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/darker_gray"></View>
</LinearLayout>