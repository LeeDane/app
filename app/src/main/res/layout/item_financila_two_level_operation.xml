<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/default_8dp"
    android:paddingBottom="@dimen/default_8dp"
    android:paddingLeft="@dimen/default_5dp"
    android:paddingRight="@dimen/default_5dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/financial_two_level_icon"
        android:layout_width="@dimen/default_30dp"
        android:layout_height="@dimen/default_30dp"
        android:scaleType="fitXY"
        android:src="@mipmap/income_increase_32px"/>

    <TextView
        android:id="@+id/financial_two_level_model"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="类型"/>

    <TextView
        android:id="@+id/financial_two_level_name"
        android:layout_width="@dimen/default_120dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/default_10dp"
        android:text="分类名称"/>

    <TextView
        android:id="@+id/financial_two_level_budget"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ellipsize="end"
        android:text="预算金额"/>

    <TextView
        android:id="@+id/financial_two_level_status"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ellipsize="end"
        android:text="状态"/>

    <ImageView
        android:id="@+id/financila_list_right"
        android:layout_width="@dimen/default_30dp"
        android:layout_height="@dimen/default_30dp"
        android:scaleType="fitXY"
        android:src="@mipmap/right_sign"/>
</LinearLayout>
