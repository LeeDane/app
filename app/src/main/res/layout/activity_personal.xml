<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/personal_bg"
        android:orientation="vertical">
        <com.leedane.cn.customview.CircularImageView
            android:id="@+id/personal_pic"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:src="@drawable/no_pic"
            app:border_width="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/personal_pic"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/personal_sign_in"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:enabled="true"
                android:visibility="gone"
                android:text="@string/personal_sign_in"/>
            <TextView
                android:id="@+id/personal_add_fan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:enabled="true"
                android:text="@string/personal_add_fan"/>
            <TextView
                android:id="@+id/personal_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/personal_info"/>
            <TextView
                android:id="@+id/personal_fans"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/personal_fans"/>
        </LinearLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/personal_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RadioGroup
            android:id="@+id/personal_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <com.leedane.cn.customview.RightBorderTextView
                android:id="@+id/personal_mood"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="tabClick"
                android:textColor="@color/colorPrimary"
                android:text="@string/personal_mood"/>
            <com.leedane.cn.customview.RightBorderTextView
                android:id="@+id/personal_comment"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="tabClick"
                android:textColor="@color/default_font"
                android:text="@string/personal_comment"/>
            <com.leedane.cn.customview.RightBorderTextView
                android:id="@+id/personal_transmit"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="tabClick"
                android:textColor="@color/default_font"
                android:text="@string/personal_transmit"/>
            <com.leedane.cn.customview.RightBorderTextView
                android:id="@+id/personal_praise"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="tabClick"
                android:textColor="@color/default_font"
                android:text="@string/personal_praise"/>
            <com.leedane.cn.customview.RightBorderTextView
                android:id="@+id/personal_attention"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="tabClick"
                android:textColor="@color/default_font"
                android:text="@string/personal_attention"/>
            <com.leedane.cn.customview.RightBorderTextView
                android:id="@+id/personal_collection"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="tabClick"
                android:textColor="@color/default_font"
                android:text="@string/personal_collection"/>
            <com.leedane.cn.customview.RightBorderTextView
                android:id="@+id/personal_login_history"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="tabClick"
                android:textColor="@color/default_font"
                android:text="@string/personal_login_history"/>
            <com.leedane.cn.customview.RightBorderTextView
                android:id="@+id/personal_sign_in_history"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="tabClick"
                android:textColor="@color/default_font"
                android:text="@string/personal_score"/>
        </RadioGroup>
    </HorizontalScrollView >
    <android.support.v4.view.ViewPager
        android:id="@+id/personal_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
    </android.support.v4.view.ViewPager>

</LinearLayout>
