<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    card_view:cardMaxElevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    android:clickable="true"
    android:layout_marginTop="@dimen/default_5dp"
    card_view:paddingStart="@dimen/default_10dp"
    card_view:paddingEnd="@dimen/default_10dp"
    android:foreground="?android:selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="@dimen/default_padding"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/attention_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_text"/>
        <TextView
            android:id="@+id/attention_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_14sp"
            android:layout_marginTop="@dimen/default_3dp"
            android:paddingTop="@dimen/default_3dp"
            android:background="#FFFAFA"
            android:singleLine="true"
            android:visibility="gone"
            android:ellipsize="end"
            android:text="@string/no_text"/>
    </LinearLayout>
</android.support.v7.widget.CardView>