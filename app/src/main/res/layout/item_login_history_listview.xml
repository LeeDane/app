<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/default_5dp"
    android:paddingBottom="@dimen/default_padding"
    android:paddingTop="@dimen/default_padding"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/login_history_ip"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@string/no_text"/>
    <TextView
        android:id="@+id/login_history_method"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@string/no_text"/>
    <TextView
        android:id="@+id/login_history_browser"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:visibility="gone"
        android:text="@string/no_text"/>
    <TextView
        android:id="@+id/login_history_status"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/no_text"/>
    <TextView
        android:id="@+id/login_history_time"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="right"
        android:text="@string/no_text"/>
</LinearLayout>