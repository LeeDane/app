<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/grid_view_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/side_bar_text" >
	<LinearLayout
		android:id="@+id/sao_yi_sao"
		android:layout_width="160dp"
		android:layout_height="wrap_content"
		android:padding="@dimen/default_10dp"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="@dimen/default_30dp"
			android:layout_height="@dimen/default_30dp"
			android:layout_marginLeft="@dimen/default_16dp"
			android:scaleType="fitXY"
			android:contentDescription="@null"
			android:src="@drawable/ic_settings_overscan_white_18dp"/>
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:textSize="16sp"
			android:text="扫一扫"
			android:textColor="@color/white"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/black"></View>
	<LinearLayout
		android:id="@+id/nearby"
		android:layout_width="160dp"
		android:layout_height="wrap_content"
		android:padding="@dimen/default_10dp"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="@dimen/default_30dp"
			android:layout_height="@dimen/default_30dp"
			android:layout_marginLeft="@dimen/default_16dp"
			android:scaleType="fitXY"
			android:contentDescription="@null"
			android:src="@drawable/ic_navigation_white_18dp"/>
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:textSize="16sp"
			android:text="附近人"
			android:textColor="@color/white"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/black"></View>
	<LinearLayout
		android:id="@+id/share"
		android:layout_width="160dp"
		android:layout_height="wrap_content"
		android:padding="@dimen/default_10dp"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="@dimen/default_30dp"
			android:layout_height="@dimen/default_30dp"
			android:layout_marginLeft="@dimen/default_16dp"
			android:scaleType="fitXY"
			android:contentDescription="@null"
			android:src="@drawable/ic_share_white_18dp"/>
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:textSize="16sp"
			android:text="分享"
			android:textColor="@color/white"/>
	</LinearLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/black"></View>
	<LinearLayout
		android:id="@+id/logout"
		android:layout_width="160dp"
		android:layout_height="wrap_content"
		android:padding="@dimen/default_10dp"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="@dimen/default_30dp"
			android:layout_height="@dimen/default_30dp"
			android:layout_marginLeft="@dimen/default_16dp"
			android:scaleType="fitXY"
			android:contentDescription="@null"
			android:src="@drawable/ic_directions_run_white_18dp"/>
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:textSize="16sp"
			android:text="退出"
			android:textColor="@color/white"/>
	</LinearLayout>
</LinearLayout>
