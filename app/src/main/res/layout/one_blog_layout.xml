<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one_blog_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/default_padding"
    android:paddingTop="@dimen/default_padding">
    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="3dp"
        android:orientation="vertical">
        <com.leedane.cn.customview.CircularImageView
            android:id="@+id/one_blog_user_pic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/no_pic"/>
        <TextView
            android:id="@+id/one_blog_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/default_5dp"
            android:text="@string/default_time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/one_blog_user_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/blueAccountLink"
                android:textSize="@dimen/default_account_text_size"
                android:text="@string/no_text"/>
            <TextView
                android:id="@+id/one_blog_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自：android客户端"
                android:maxWidth="120dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:textSize="12sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/one_blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/default_5dp"
            android:textSize="@dimen/default_account_text_size"
            android:text="@string/no_text"/>
        <TextView
            android:id="@+id/one_blog_digest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_5dp"
            android:text="@string/no_text"/>
        <LinearLayout
            android:id="@+id/one_blog_img_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="3dp"
            android:visibility="gone"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
