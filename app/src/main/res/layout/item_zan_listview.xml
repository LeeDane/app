<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:paddingBottom="@dimen/default_padding"
    android:paddingTop="@dimen/default_padding"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zan_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_text"/>
        <TextView
            android:id="@+id/zan_time"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:text="@string/no_text"/>
        <TextView
            android:id="@+id/zan_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zan_from"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/default_16sp"
            android:text="@string/no_text"/>
        <TextView
            android:id="@+id/zan_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zan_content"
            android:textSize="@dimen/default_14sp"
            android:layout_marginTop="@dimen/default_3dp"
            android:paddingTop="@dimen/default_3dp"
            android:background="#FFFAFA"
            android:singleLine="true"
            android:visibility="gone"
            android:ellipsize="end"
            android:text="@string/no_text"/>
    </RelativeLayout>
</LinearLayout>
