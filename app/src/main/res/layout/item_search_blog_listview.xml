<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <com.leedane.cn.customview.CircularImageView
            android:id="@+id/search_blog_user_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/no_user"/>
        <TextView
            android:id="@+id/search_blog_user_name"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:textColor="@color/blueAccountLink"
            android:text="@string/no_text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/search_blog_source"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="来自：android客户端"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/search_blog_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textSize="12sp"
                android:text="2015-12-08 11:10"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
        <TextView
            android:id="@+id/search_blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/no_text"/>
        <TextView
            android:id="@+id/search_blog_digest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/no_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/search_blog_img_main"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/head"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
