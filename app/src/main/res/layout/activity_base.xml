<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <RelativeLayout
	    android:id="@+id/baeselayout_navbar"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:background="@color/title_color">
	    <LinearLayout
	        android:id="@+id/base_backlayout"
	        android:layout_width="50dp"
	    	android:layout_height="match_parent"
	        android:orientation="horizontal"
	        android:visibility="gone"
	        android:clickable="true"
			android:onClick="onGoBack">
	        <View
		        android:id="@+id/baeselayout_back_iconview"
		        android:layout_width="11dp"
				android:layout_height="19dp"
				android:layout_marginLeft="15dp"
				android:clickable="true"
				android:background="@drawable/back_selector"
				android:layout_gravity="center"/>
	    </LinearLayout>
	    <TextView
		    android:id="@+id/base_title_textview"
		    android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_toRightOf="@id/base_backlayout"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:textSize="18sp"
			android:gravity="center"
			android:textColor="#ffffff"/>

	    <LinearLayout
	        android:id="@+id/base_centerlayout"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_centerVertical="true"
	    	android:layout_centerInParent="true"
	        android:orientation="vertical"
	        android:visibility="gone">
	        <TextView 
			    android:id="@+id/base_center_title"
			    android:layout_width="match_parent"
				android:layout_height="match_parent" 
				android:gravity="center"
				android:textSize="16dp"
				android:textColor="#ffffff"/>
	        <TextView 
			    android:id="@+id/base_center_desc"
			    android:layout_width="match_parent"
				android:layout_height="match_parent" 
				android:gravity="center"
				android:ellipsize="end"
				android:singleLine="true"
				android:textSize="11dp"
				android:textColor="#ffffff"/>
	    </LinearLayout>
	    
	    <TextView 
	        android:id="@+id/base_right_textview"
	        android:layout_width="70dp"
	        android:layout_height="match_parent"
	        android:layout_marginRight="10dp"
	        android:textSize="15dp"
	        android:gravity="right|center_vertical"
	        android:layout_alignParentRight="true"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:textColor="#f9f9f9"
	        android:visibility="gone"
	        android:clickable="true"
	        android:onClick="onRightTextClick"/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/view_right_img"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginTop="13dp"
				android:layout_marginRight="15dp"
				android:visibility="gone"
				android:src="@mipmap/send_mood"/>
			<Button
				android:id="@+id/view_right_button"
				android:layout_width="wrap_content"
				android:minWidth="70dp"
				android:gravity="center"
				android:layout_height="27dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="15dp"
				android:visibility="gone"
				android:text="@string/mood_publish"
				android:background="@drawable/btn_default_no_seletorbg"/>
		</LinearLayout>
	</RelativeLayout>

</LinearLayout>
