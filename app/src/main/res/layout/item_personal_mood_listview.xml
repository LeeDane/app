<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/personal_mood_froms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="来自：android客户端"
            android:textSize="12sp"
            android:clickable="false"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/personal_mood_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:textSize="12sp"
            android:clickable="false"
            android:text="2015-12-08 11:10"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/personal_mood_more"
            android:layout_width="20dp"
            android:layout_height="13dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:src="@mipmap/pop_more_down"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.leedane.cn.customview.AutoLinkTextView
        android:id="@+id/personal_mood_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_marginTop="8dp"
        android:text="网站：http://www.baidu.com, 电话：13712345671 Today is very cold!Today is very cold!Today is very cold!Today is very cold!"/>

    <TextView
        android:id="@+id/personal_mood_location_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:visibility="gone"
        android:text="@string/action_settings"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/personal_mood_img_main"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/no_pic"/>
    </LinearLayout>
    <TextView
        android:id="@+id/personal_mood_praise_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/action_settings"/>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <com.leedane.cn.customview.RightBorderTextView
            android:id="@+id/personal_mood_operate_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:clickable="false"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/comment"/>
        <com.leedane.cn.customview.RightBorderTextView
            android:id="@+id/personal_mood_operate_transmit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:clickable="false"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/transmit"/>
        <com.leedane.cn.customview.RightBorderTextView
            android:id="@+id/personal_mood_operate_praise"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:clickable="true"
            android:visibility="gone"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/personal_praise"/>

    </LinearLayout>
</LinearLayout>
