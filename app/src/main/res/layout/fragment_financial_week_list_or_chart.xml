<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ToggleButton
        android:id="@+id/chart_or_list_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_24dp"
        android:background="#00000000"
        style="@style/chart_or_list"
        android:layout_margin="@dimen/default_5dp"
        android:checked="true"
        android:textOff="图表视图"
        android:gravity="center"
        android:layout_gravity="right"
        android:textSize="@dimen/default_12sp"
        android:textOn="列表视图"/>
    <FrameLayout
        android:id="@+id/week_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
